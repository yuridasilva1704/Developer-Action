FloatLayout:

    Image:
        source: 'Images/background_image.jpg'
        size_hint: None, None
        size: 1920, 1080
        pos_hint: {"center_x": 0.5, "center_y": 0.9}

    Image:
        source: 'Images/Welcome.jpg'
        size_hint: None, None
        size: 150, 150
        pos_hint: {"center_x": 0.5, "center_y": 0.85}

    MDCard:
        size_hint: None, None
        size: 250, 350
        pos_hint: {'center_x': 0.5, 'center_y': 0.45}
        elevation: 20
        orientation: "vertical"
        padding: 5
        spacing: 5
        md_bg_color: 1, 1, 1, 0.5  

        MDLabel:
            text:'Bem Vindo'
            font_style: 'H6'
            halign: 'center'
            bold:True
            pos_hint: {'center_x': 0.5, 'center_y': 0.85}

        MDLabel:
            text:'Fa√ßa login para entrar'
            font_style:'Caption'
            halign:'center'

        MDLabel:
            id: label
            font_size: 30
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 5

        MDTextField:
            hint_text: "Digite seu login"
            id: login
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x':0.5}

        MDTextField:
            hint_text: "Digite sua senha"
            id: senha
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {'center_x':0.5}
            password: True

        MDFillRoundFlatButton:
            text:'Entrar'
            font_size: 18
            elevation: 8
            pos_hint: {"center_x": 0.5, 'center_y': 0.4}
            size_hint_x: 0.7
            on_press: app.login()    

        MDTextButton:
            text: 'Redefinir senha'
            font_size: 14
            pos_hint: {'center_x': 0.5, 'center_y': 0.15} 

        Widget:
            size_hint_y: None
            height: 30
